@page
@model Web.Razor.Templates.UsernameResetTemplateModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        @@font-face {
            font-family: 'Grobold';
            src: url('https://{@Model.Domain}/_content/Web.Razor/GROBOLD.ttf') format('truetype');
        }
        body {
            font-family: 'Grobold', Arial, sans-serif;
            background-color: #e0f7fa;
            margin: 0;
            padding: 0;
        }
        .container {
            width: 100%;
            padding: 20px;
            background-color: #ffffff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin: 20px auto;
            max-width: 600px;
            border: 5px solid #4caf50;
            border-radius: 10px;
        }
        .header {
            background-color: #4caf50;
            color: white;
            padding: 10px 0;
            text-align: center;
            border-radius: 10px 10px 0 0;
        }
        .content {
            padding: 20px;
            text-align: center;
        }
        .button {
            background-color: #4caf50;
            color: white;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 5px;
            font-weight: bold;
        }
        .footer {
            margin-top: 20px;
            font-size: 12px;
            color: #888888;
            text-align: center;
        }
        .vines {
            width: 100%;
            height: auto;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <img src="https://{@Model.Domain}/_content/Web.Razor/logo.png" alt="@Model.SiteName" class="logo">
            <h1>Username Reset</h1>
        </div>
        <div class="content">
            <p>Hi there,</p>
            <p>We received a request to reset your username. Click the button below to reset it:</p>
            <a href="@Model.ResetLink" class="button">Reset Username</a>
            <p>If you did not request a username reset, please ignore this email.</p>
        </div>
        <div class="footer">
            <p>With love, from the team at @Model.SiteName! ❤️</p>
        </div>
    </div>
</body>
</html>
